{
    "name": "baldinof/clock",
    "description": "Simple clock abstraction",
    "keywords": [
        "baldinof",
        "clock"
    ],
    "homepage": "https://github.com/baldinof/clock",
    "license": "MIT",
    "authors": [
        {
            "name": "Florent Baldino",
            "email": "baldinof@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Baldinof\\Clock\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Baldinof\\Clock\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
